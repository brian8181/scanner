    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/scanner",
            "args": ["${workspaceFolder}/test/tok.txt", "${workspaceFolder}/.config/config.txt"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "MAKE",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "CYGWIN-GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${fileBasenameNoExtension}",
            "args": [ "${workspaceFolder}/test/sl.txt" ],
            "stopAtEntry": false,
            "cwd": "C:/cygwin64/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\cygwin64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "existing": false,
            "taskDetail": "compiler: C:/cygwin64/bin/g++.exe",
            "taskStatus": "Detected Task"
        },
        {
            "name": "MAKE",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "C:/cygwin64/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\cygwin64\\bin\\gdb.exe",

            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "existing": false,
            "preLaunchTask": "MAKE",
            "detail": "preLaunchTask: C/C++: g++.exe build active file",
            "taskDetail": "compiler: C:/cygwin64/bin/g++.exe",
            "taskStatus": "Detected Task"
        }

    ]
}
