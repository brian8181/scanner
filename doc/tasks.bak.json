{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MAKE",
            "type": "shell",
            "command": "make",
            "args": [
                "--file=~/src/scanner/makefile"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CYWIN-GDB",
            "type": "cppbuild",
            "command": "C:/cygwin64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/cygwin64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "compiler: C:/cygwin64/bin/g++.exe"
        }
    ]
}
